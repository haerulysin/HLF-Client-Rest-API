{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "moduleResolution": "node",
        "lib": ["ES2022"],
        "module": "ESNext",
        "declaration": true,
        "sourceMap": true,
        // "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ]
}